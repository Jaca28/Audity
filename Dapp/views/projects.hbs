<!DOCTYPE html>
<html lang="en">
{{>header}}

<body>
  {{#if roll}}
  {{>navbar}}
  {{>sidebar}}
  <div id="contenedor" class="container p-4 cover-spin" style="margin-top: 4rem;">
    <div id="spin" class="col g-1 cover-spin" style="display:none; margin: auto 20em auto auto;">
        <div class="" style="transform: translate(40%, 3rem);">Pending Transaction...</div>
      </div>
    <div id="contenedorB">
      <div class="container mb-4">
      <div class="row">
        <div class="col-md-4">
          <div class="card-counter">
            <i class="fa fa-solid fa-cube" style="color:#FF696D;"></i>
            <span class="count-numbers count-projects">...</span>
            <span class="count-name">Projects</span>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card-counter">
            <i class="fa fa-gear" style="color: #f44a88;"></i>
            <span class="count-numbers count-requeriments">...</span>
            <span class="count-name">Requirements</span>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card-counter">
            <i class="fa fa-user" style="color: #00B3FF;"></i>
            <span class="count-numbers count-admins">...</span>
            <span class="count-name">Administrator</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row" id="table-section">
      <div class="col-lg-12">
        <div class="table-responsive">
          <div class="cover-spin-message">Loading Projects ...</div>
          <table id="projects" class="table table-striped table-bordered" style="width:100%">
          </table>
        </div>
      </div>
    </div>
    </div>
  </div>
  <br>
  <br>
  <script src="/javascripts/contractData.js"></script>
  <script type="module" src="/javascripts/projectsQuery.js"></script>
  {{>scripts}}
  {{else}}
  {{>restrictedAccess}}
  {{/if}}
</body>

</html>